.card
  .card-image
    picture
      source(media="(max-width: 568px)", :srcset="anime.cover_thumb_url")
      source(media="(max-width: 1280px)", :srcset="anime.cover_medium_url")
      img(:src="anime.cover_url")
    span.card-title.title.col.s12
      a.white-text(href="")
        strong {{ anime.name }}
  .card-content
    .row
      .col.s5.l6
        .container.black-text
          h6 
            span.paddin-10 cap 1
      .col.s7.l6
        span.card-title.activator.grey-text.text-darken-4
          i.material-icons.right more_vert
  .card-reveal
    span.card-title.grey-text.text-darken-4
      i.material-icons.right close
    p.text-justify
