.card
  .card-image
    picture
      source(media="(max-width: 568px)", :srcset="anime.cover_small_url")
      source(media="(max-width: 1280px)", :srcset="anime.cover_medium_url")
      img.activator.responsive-img(:src="anime.cover_url")
    span.card-title.title.col.s12
      a.white-text(href="")
        strong {{ anime.name }}
  .card-content
    span.card-title.activator.grey-text.text-darken-4
      | Eposodio 1
      i.material-icons.right more_vert
  .card-action
    a(href="") Ver episodio
  .card-reveal
    span.card-title.grey-text.text-darken-4
      i.material-icons.right close
    p.text-justify {{anime.synopsis}}
